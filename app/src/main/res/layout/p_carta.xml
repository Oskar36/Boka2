<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/l_layout1"
    tools:context=".a_carta">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablay"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabcarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carta" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/taboferta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ofertas" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:id="@+id/l_layout"
        android:layout_width="wrap_content"
        android:layout_height="745dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablay"
        tools:context="com.example.boka2.a_carta">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:id="@+id/llcarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>