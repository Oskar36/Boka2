<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".a_login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="196dp"
                            android:layout_height="155dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/furgoneta" />

                        <EditText
                            android:id="@+id/login_correo"
                            android:layout_width="210dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:hint="@string/usuario"
                            android:inputType="textPersonName"
                            android:minHeight="48dp"
                            style="@style/Contenedores"
                            />

                        <EditText
                            android:id="@+id/login_contr"
                            style="@style/Contenedores"
                            android:layout_marginTop="15dp"
                            android:ems="10"
                            android:hint="@string/contraseÃ±a"
                            android:inputType="textPassword"
                            android:minHeight="48dp"
                            android:layout_width="210dp"
                            android:layout_height="45dp"/>

                        <CheckBox
                            android:id="@+id/mostrar"
                            android:layout_width="208dp"
                            android:layout_height="wrap_content"
                            android:text="@string/ver"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.951"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.415"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/Login_txt_error"
                            android:layout_width="210dp"
                            android:layout_height="31dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textAlignment="center"
                            android:textColor="#A61616" />

                        <Button
                            android:id="@+id/Login_but_entrar"
                            style="@style/botones"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/Login_but_entrar" />

                        <TextView
                            android:id="@+id/txtInvitado"
                            style="@style/texto"
                            android:layout_width="230dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginBottom="5dp"
                            android:text="@string/txtInvitado"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Login_txt_registro"
                            style="@style/texto"
                            android:layout_width="230dp"
                            android:layout_height="52dp"
                            android:layout_marginTop="40dp"
                            android:text="@string/Login_txt_registro"
                            android:textAlignment="center"
                            android:textColor="#2979FF"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.497"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/Login_but_entrar"
                            app:layout_constraintVertical_bias="0.0" />


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>